{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts",
    "./build.ts",
    "node_modules/@league-of-foundry-developers/foundry-vtt-types/index.d.ts"
  ],
  "exclude": []
}
